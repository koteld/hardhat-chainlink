{
  "name": "@chainlink/hardhat-chainlink",
  "version": "0.0.2",
  "description": "Integrates Chainlink into Hardhat projects",
  "repository": "https://github.com/smartcontractkit/hardhat-chainlink.git",
  "homepage": "https://github.com/smartcontractkit/hardhat-chainlink/blob/main/DOCUMENTATION.md",
  "license": "MIT",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "keywords": [
    "chainlink",
    "smart-contracts",
    "hardhat",
    "hardhat-plugin"
  ],
  "scripts": {
    "lint:fix": "prettier --write 'src/**/*.{js,ts}' 'test/**/*.{js,ts}' && tslint --fix --config tslint.json --project tsconfig.json",
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "test": "mocha --exit --recursive 'test/**/*.test.ts'",
    "copy": "mkdir -p dist/src/tasks && cp src/sandbox/setup/Dockerfile dist && cp src/sandbox/setup/docker-compose.yaml dist && cp src/sandbox/setup/env.template dist/src/tasks/.env && cp -r artifacts dist && cp -r cache dist && cp -r src/contracts/src dist",
    "build": "npx hardhat compile && tsc --project tsconfig.json --skipLibCheck && yarn run copy",
    "watch": "tsc -w --project tsconfig.json",
    "prepublishOnly": "yarn run build",
    "generateTypes": "typechain --target ethers-v5 --out-dir './types-abis' 'src/contracts/abis/*.json' && typechain --target ethers-v5 --out-dir './types' './node_modules/@chainlink/contracts/abi/v0.8/*.json'"
  },
  "files": [
    "dist/",
    "src/",
    "LICENSE",
    "README.md",
    "DOCUMENTATION.md"
  ],
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "2.0.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@typechain/ethers-v5": "^10.1.1",
    "@typechain/hardhat": "^6.1.6",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/mute-stream": "^0.0.1",
    "@types/node": "^16.18.38",
    "@types/uuid": "^8.3.4",
    "chai": "^4.3.7",
    "hardhat": "^2.16.0",
    "hardhat-gas-reporter": "^1.0.9",
    "mocha": "^10.2.0",
    "prettier": "^2.8.8",
    "solidity-coverage": "^0.8.3",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typechain": "^8.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@chainlink/contracts": "0.6.1",
    "@inquirer/confirm": "^2.0.4",
    "@inquirer/core": "^2.3.0",
    "@inquirer/input": "^1.2.3",
    "@inquirer/select": "^1.2.3",
    "@inquirer/type": "^1.1.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "axios": "^1.4.0",
    "docker-compose": "^0.24.1",
    "dotenv": "16.1.4",
    "eth-crypto": "^2.6.0",
    "ethers": "^5.4.7",
    "is-http-url": "^2.0.0",
    "uuid": "^9.0.0",
    "vm2": "^3.9.19"
  },
  "peerDependencies": {
    "hardhat": "^2.16.0"
  }
}
